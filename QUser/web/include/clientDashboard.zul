    <borderlayout>
    
        <!--  North is for the citizens waiting in line. -->
        <north id="client_north" border="none" hflex="true" splittable="true" height="@load(fmodel.getCFMSHeight())"
               style="@load(fmodel.getCFMSHidden())" autoscroll="true">
            <panel title="@load(fmodel.avaitColumn)" border="normal" height="100%" vflex="max">
                <panelchildren>
                    <zscript><![CDATA[
                        import java.util.Comparator;
                        import ru.apertum.qsys.quser.WaitingPanelComparator;
                        Comparator cTimeAsc = new WaitingPanelComparator(true, 1);
                        Comparator cTimeDsc = new WaitingPanelComparator(false, 1);
                    ]]></zscript>
                    <listbox id="service_list" model="@load(fmodel.user.customerList)"
